                        android:paddingLeft="12dp"
                        android:text="@string/hedescription2"
                        android:textColor="#172E8E"
                        android:textSize="18dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/ttitle3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/ddescription2"
                        android:maxLines="1"
                        android:text="@string/hetitle3"
                        android:textColor="#5E0D08"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:id="@+id/ddescription3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ttitle3"
                        android:maxLines="3"
                        android:paddingLeft="12dp"
                        android:text="@string/hedescription3"
                        android:textColor="#172E8E"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/ttitle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/ddescription3"
                        android:maxLines="1"
                        android:text="@string/hetitle4"
                        android:textColor="#5E0D08"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"/>


                    <TextView
                        android:id="@+id/ddescription4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ttitle4"
                        android:maxLines="3"
                        android:paddingLeft="12dp"
                        android:text="@string/hedescription4"
                        android:textColor="#172E8E"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        />



                </RelativeLayout>
            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="18sp"
                android:layout_below="@+id/card_view1"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tttitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="@string/mitttitle"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/tttitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tttitle"
                        android:maxLines="1"
                        android:text="@string/mitttitle1"
                        android:textColor="#5E0D08"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"

                        />

                    <TextView
                        android:id="@+id/dddescription1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tttitle1"
                        android:maxLines="6"
                        android:paddingLeft="12dp"
                        android:textStyle="bold"
                        android:paddingRight="12dp"
                        android:text="@string/midddescription1"
                        android:textColor="#172E8E"
                        android:textSize="18dp"

                        />

                    <TextView
                        android:id="@+id/tttitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/dddescription1"
                        android:maxLines="1"
                        android:text="@string/petttitle2"
                        android:textColor="#5E0D08"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        />


                    <TextView
                        android:id="@+id/dddescription2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tttitle2"
                        android:maxLines="1"
                        android:paddingLeft="12dp"
                        android:text="@string/midddescription2"
                        android:textColor="#172E8E"
                        android:textSize="18dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/tttitle3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/dddescription2"
                        android:maxLines="1"
                        android:text="@string/mitttitle3"
                        android:textColor="#5E0D08"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:id="@+id/dddescription3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tttitle3"
                        android:maxLines="3"
                        android:paddingLeft="12dp"
                        android:text="@string/middddescription3"
                        android:textColor="#172E8E"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tttitle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/dddescription3"
                        android:maxLines="1"
                        android:text="@string/mitttitle4"
                        android:textColor="#5E0D08"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"/>


                    <TextView
                        android:id="@+id/dddescription4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tttitle4"
                        android:maxLines="3"
                        android:paddingLeft="12dp"
                        android:text="@string/midddescription4"
                        android:textColor="#172E8E"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:id="@+id/tttitle5"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_below="@+id/dddescription4"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:text="@string/mitttitle5"
                        android:textColor="#5E0D08"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:paddingTop="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />



                    <TextView
                        android:id="@+id/dddescription5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="18"
                        android:textColor="#172E8E"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:layout_below="@+id/tttitle5"
                        android:textStyle="bold"

                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>




        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
































